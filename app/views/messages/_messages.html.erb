  <div class="upper-content">
    <div class="whose-message">
      <%= messages.user.name %>
    </div>
    <div class="date-time">
      <%= l messages.created_at %>
    </div>
  </div>
  <div class="lower-content">
    <div class="message">
      <%= messages.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
